@model IEnumerable<GestaoProffff.Models.MensalidadeModel>

@{
    ViewData["Title"] = "Mensalidade";
}

<h1>Mensalidade</h1>

<p>
    <a asp-action="AdicionarMensalidade" class="btn btn-success">Adicionar nova mensalidade</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDMensalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVencimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlunoAssociado.NomeAluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.IDMensalidade)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.DataVencimento)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.AlunoAssociado.NomeAluno)
                    </td>
                    <td>
                        <a asp-action="EditarMensalidade" asp-route-id="@item.IDMensalidade" class="btn btn-primary">Editar</a> |
                        <a asp-action="DetalhesMensalidade" asp-route-id="@item.IDMensalidade" class="btn btn-info">Detalhes</a> |
                        <a asp-action="ExcluirMensalidade" asp-route-id="@item.IDMensalidade" class="btn btn-danger">Deletar</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
