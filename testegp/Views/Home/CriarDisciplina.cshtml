@model GestaoProffff.Models.DisciplinaModel

@{
    ViewData["Title"] = "CriarDisciplina";
}

<h1>Criar Disciplina</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CriarDisciplina" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IDDisciplina" class="control-label col-md-3">ID Disciplina</label>
                <div class="col-md-6">
                    <input asp-for="IDDisciplina" class="form-control" readonly />
                    <span asp-validation-for="IDDisciplina" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NomeDisciplina" class="control-label col-md-3">Nome da Disciplina</label>
                <div class="col-md-6">
                    <input asp-for="NomeDisciplina" class="form-control" />
                    <span asp-validation-for="NomeDisciplina" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ProfessorResponsavel.IDProfessor" class="control-label col-md-3">Professor Responsável</label>
                <div class="col-md-6">
                    <select asp-for="ProfessorResponsavel.IDProfessor" asp-items="@Model.ProfessoresSelectList" class="form-control"></select>
                    <span asp-validation-for="ProfessorResponsavel.IDProfessor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <button type="submit" class="btn btn-primary">Criar Disciplina</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
